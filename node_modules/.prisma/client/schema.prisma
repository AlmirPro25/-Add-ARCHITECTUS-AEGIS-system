// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./tactical_db.sqlite"
}

model Device {
  id        String   @id @default(uuid())
  name      String   @unique // Name must be unique, e.g., "MISSION_CONTROL_DASHBOARD" or "AGENT-XYZ"
  type      String   @default("GENERIC") // ANDROID, IOS, WEB_AGENT, MISSION_CONTROL
  token     String   @unique // Auth token (simplified for demo)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Last Known State
  isOnline    Boolean @default(false)
  lastBattery Int     @default(0)
  lastLat     Float?
  lastLng     Float?
  lastIp      String?

  telemetry Telemetry[]
  logs      MissionLog[]
  media     MediaAsset[]
}

model Telemetry {
  id        String   @id @default(uuid())
  deviceId  String
  device    Device   @relation(fields: [deviceId], references: [id])
  timestamp DateTime @default(now())

  type String // GPS, SENSOR, NETWORK, BATTERY, STATUS
  data String // JSON payload of the reading (stored as string)
}

model MissionLog {
  id        String   @id @default(uuid())
  deviceId  String
  device    Device   @relation(fields: [deviceId], references: [id])
  timestamp DateTime @default(now())
  level     String // INFO, WARN, CRITICAL
  message   String
}

model MediaAsset {
  id        String   @id @default(uuid())
  deviceId  String
  device    Device   @relation(fields: [deviceId], references: [id])
  timestamp DateTime @default(now())
  type      String // IMAGE, AUDIO, VIDEO, SCREENSHOT
  filepath  String // Path to the stored file
  metadata  String? // Additional metadata as JSON string (e.g., resolution, duration, coordinates)
}
